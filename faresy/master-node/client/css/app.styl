@import 'nib'

body
  font normal 1em sans-serif
  background #000
  text-align center
  
td
  vertical-align top

h1
  margin 1em 0
  font-size 1.5em

#counter
  font italic bold 15em "DS-Digital"
  margin 20px 0
  color #f04

#head
  margin-bottom 15px
#last img
  margin 32px 0
  
#demo
  width 90%
  text-align left
  margin 0 auto
  h3
    font-size 1.0em
    font-weight normal
  #myMessage, #chatlog
    border none
    box-shadow inset 0 0 2px #777
    border-radius 5px
  #myMessage
    width 100%
  #chatlog
    width 100%
    background-color white
    p
      font-size 0.9em
      color #000a68
      padding 3px 9px
      margin 0
    p:first-child
      padding-top 9px
    p:last-child
      padding-bottom 9px
    span.time
      float right
      width 70px
      text-align right
